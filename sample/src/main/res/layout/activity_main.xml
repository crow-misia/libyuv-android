<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/origin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/to_bitmap"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/rotate90"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/mirror"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/origin_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/to_bitmap_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/rotate90_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/mirror_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/convert3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/convert7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/convert10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/scale"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <ImageView
            android:id="@+id/scale_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>

</LinearLayout>
